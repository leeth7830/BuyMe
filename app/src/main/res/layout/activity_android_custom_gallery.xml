<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="?attr/colorPrimary" android:layout_height="match_parent">


    <GridView android:id="@+id/PhoneImageGrid"
        android:layout_width="fill_parent" android:layout_height="fill_parent"
        android:numColumns="auto_fit" android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp" android:columnWidth="90dp"
        android:stretchMode="columnWidth" android:gravity="center"

        android:layout_below="@+id/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/toolbar"
        android:background="?attr/colorPrimary"
        android:layout_alignParentStart="true">

        <Button android:id="@+id/submitBtn"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Submit"
            android:minWidth="150px"
            android:layout_alignTop="@+id/textView12"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:src="@drawable/ic_back"
            android:layout_alignTop="@+id/textView12"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Images"
            android:id="@+id/textView12"
            android:textSize="30dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/imageButton"
            android:layout_toEndOf="@+id/imageButton" />

    </RelativeLayout>
</RelativeLayout>